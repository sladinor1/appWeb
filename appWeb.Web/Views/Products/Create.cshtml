@model appWeb.Web.Models.ProductCatalogyViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />

<form enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Author " class="control-label"></label>
                    <input asp-for="Author" value="@User.Identity.Name" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tittle" class="control-label"></label>
                    <input asp-for="Tittle" class="form-control" />
                    <span asp-validation-for="Tittle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lot" class="control-label"></label>
                    <input asp-for="Lot" class="form-control" />
                    <span asp-validation-for="Lot" class="text-danger"></span>
                </div>
                @if (Model.ProductImages == null)
                {
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" type="file" name="Pimage" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                }
                else
                {
                    @for (int i = 0; i < Model.ProductImages.Count; i++)
                    {
                        @*<img src="@item.ImageFullPath" style="width:100px;height:100px;max-width: 100%; height: auto;" />*@
                    }
                }
                <div>
                    @if (Model.CategoryList != null)
                    {
                        @for (int i = 0; i < Model.CategoryList.Count; i++)
                        {
                            <div>
                                @Html.HiddenFor(x => x.CategoryList[i].Name)
                                @Html.HiddenFor(x => x.CategoryList[i].Id)
                                @Html.CheckBoxFor(x => x.CategoryList[i].Checked)
                                @Html.DisplayFor(modelItem => Model.CategoryList[i].Name)
                            </div>
                        }
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
