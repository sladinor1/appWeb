@model IEnumerable<appWeb.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Result";
}

<h2>Results</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Results</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    <a asp-action="Send" asp-route-id="@item.Id" asp-route-fromid="@User.Identity.Name" class="btn btn-warning">Invite <i class="glyphicon glyphicon-send"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a asp-action="Add_Friend" class="btn btn-success">Search Again</a>
</div>
